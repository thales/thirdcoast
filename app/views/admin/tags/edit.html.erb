<% content_for :stylesheets do %>
  #leftCol {display: none}
<% end -%>

<div class="rightCol">

<h1>Editing tag</h1>

<% form_for([:admin,@tag]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_tag_path(@tag) %> |
<%= link_to 'Back', admin_tags_path %> |
<%= link_to 'Delete', admin_tag_path(@tag), :confirm => "Are you sure?", :method => "delete" %>
</div>    
<h1>Admin Login</h1>

<% form_for [:admin,@user_session], :url => admin_user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %> |
  <%#= link_to 'Forgot Password',  new_admin_password_reset_path %>
<% end %>
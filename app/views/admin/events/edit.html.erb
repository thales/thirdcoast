<div class="rightCol">
<h1>Editing Event</h1>

<% form_for([:admin,@event], :html => { :multipart => true}) do |form| %>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <p><%= form.submit 'Update' %></p>
<% end %>

<p>
  <%= link_to 'Show', admin_event_path(@event) %>
  |
  <%= link_to 'Delete', admin_event_path(@event), :method => :delete, :confirm => "Are you sure to delete \"#{@event.name}\"?" %>
  |
  <%= link_to 'Back', admin_events_path %>
</p>
</div>

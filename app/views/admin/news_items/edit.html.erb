<h1>Editing News item</h1>

<% form_for([:admin, @news_item]) do |form| %>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <p><%= form.submit 'Update' %></p>
<% end %>

<p>
  <%= link_to 'Show', admin_news_item_path(@news_item) %>
  |
  <%= link_to 'Delete', admin_news_item_path(@news_item), :method => :delete, :confirm => "Are you sure to delete \"#{@news_item.title}\"?" %>
  |
  <%= link_to 'Back', admin_news_items_path %>
</p>

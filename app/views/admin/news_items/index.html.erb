<div class="rightCol">
  <div>
    <p style="float: right;"><%= link_to 'New News Item', new_admin_news_item_path %></p>
    <h2>News Items (<%= @news_items.size %>)</h2>
  </div>
  <table>
    <tr>
      <th>Title</th>
    </tr>
    <% @news_items.each do |news_item| %>
      <tr class="<%= cycle("even", "odd") -%>">
        <td><%= link_to "#{news_item.title}", edit_admin_news_item_path(news_item) %></td>
      </tr>
    <% end -%>
  </table>
  <br />

  <%= will_paginate(@news_items) %>

</div>

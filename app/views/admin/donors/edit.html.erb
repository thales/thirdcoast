<div class="rightCol">
<h1>Editing Corporate Donor</h1>

<% form_for([:admin,@donor], :html => { :multipart => true}) do |form| %>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <p><%= form.submit 'Update' %></p>
<% end %>

<p>
  <%= link_to 'Show', admin_donor_path(@donor) %>
  |
  <%= link_to 'Back', admin_donors_path %>
  |
  <%= link_to 'Delete', admin_donor_path(@donor), :confirm => "Are you sure?", :method => "delete" %>
  
</p>
</div>
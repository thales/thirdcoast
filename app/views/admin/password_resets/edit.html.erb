<h1>Change My Password</h1>

<div class="form_wrapper">
<% form_for @user, :url => admin_password_reset_path, :method => :put do |f| %>
  <%= f.error_messages %>
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "medium" %><br />
  <br />
  <%= f.submit "Update my password and log me in" %>
<% end %>
</div>